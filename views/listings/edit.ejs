<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Your Listing</h3>
        <form action="/listings/<%=list._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter title" value="<%= list.title %>" class="form-control" required>
                <div class="valid-feedback">Title Looks good!</div>
                <div class="invalid-feedback">Title should be valid!!</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description about listing" class="form-control" required><%= list.description %></textarea>
                <div class="valid-feedback">Description Looks good!</div>
                <div class="invalid-feedback">Add a short and sweet description</div>
            </div>

            <div class="mb-3">
                Original Image <br>
                <img src="<%= originalUrl %>" alt="listing image">
                <p><%= originalUrl %></p>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" name="listing[image]" class="form-control" >
            </div>
 
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" name="listing[price]" placeholder="Enter price" value="<%= list.price %>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Price should be valid!!</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter Location" value="<%= list.location %>" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Location should be valid!!</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Enter Country" value="<%= list.country %>" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Country name should be valid!!</div>
            </div>
            <button class="btn btn-dark edit-btn mt-2">Edit</button>
            <br><br>
        </form>
    </div>
</div>